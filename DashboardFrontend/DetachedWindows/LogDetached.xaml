<Window x:Class="DashboardFrontend.DetachedWindows.LogDetached"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashboardFrontend.DetachedWindows"
        mc:Ignorable="d"
        Title="LogDetached" Height="450" Width="800">
    <Border Background="{DynamicResource BackgroundColor}">
        <Grid Name ="logButtonGrid"
              Margin="10,10,10,10">
            <ToggleButton Name="logInfoButton"
                          Content="Info"
                          Grid.Column="0"
                          Margin="10,0,10,0"
                          Style="{StaticResource DefaultToggleButton}"/>
            <ToggleButton Name="logWarningButton"
                          Content="Warning"
                          Grid.Column="1"
                          Margin="10,0,10,0"
                          Style="{DynamicResource DefaultToggleButton}"/>
            <ToggleButton Name="logErrorButton"
                          Content="Error"
                          Grid.Column="2"
                          Margin="10,0,10,0"
                          Style="{DynamicResource DefaultToggleButton}"/>
            <ToggleButton Name="logFatalButton"
                          Content="Fatal"
                          Grid.Column="3"
                          Margin="10,0,10,0"
                          Style="{DynamicResource DefaultToggleButton}"/>
            <ToggleButton Name="logValidationButton"
                          Content="Validation"
                          Grid.Column="4"
                          Margin="10,0,10,0"
                          Style="{DynamicResource DefaultToggleButton}"/>
            <Button Name="Filter"
                    Content="Filter"
                    Grid.Column="6"
                    Style="{DynamicResource DefaultButton}"/>
            <ScrollViewer Name="logScrollViewer"
                          Grid.Column="0"
                          Grid.Row="2"
                          Grid.ColumnSpan="7">
                <ListView Name="LogEntryList"
                          Background="#FF1F4E90">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Timestamp" DisplayMemberBinding="{Binding Date}" Width="auto"></GridViewColumn>
                            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="auto"></GridViewColumn>
                            <GridViewColumn Header="Manager" DisplayMemberBinding="{Binding Manager}" Width="auto"></GridViewColumn>
                            <GridViewColumn Header="Log message" DisplayMemberBinding="{Binding Content}" Width="auto"></GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid> 
    </Border>
    
</Window>
