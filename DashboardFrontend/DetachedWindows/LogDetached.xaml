<Window x:Class="DashboardFrontend.DetachedWindows.LogDetached"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashboardFrontend.DetachedWindows"
        mc:Ignorable="d"
        Title="Log monitoring" Height="450" Width="800">
    <Border Background="{DynamicResource BackgroundColor}">
        <Grid Name ="GridLog"
              Margin="10,10,10,10">
            <ToggleButton Name="ToggleButtonLogInfo"
                          Content="Info"
                          Grid.Column="0"
                          Margin="0,0,10,0"
                          Style="{StaticResource DefaultToggleButton}"/>
            <Image Name="ImageInfo" 
                   Source="../Icons/Info.png" 
                   Grid.Column="0" 
                   Stretch="Fill" 
                   Width="15" 
                   Height="15" 
                   Margin="-60,0,0,0"/>
            <ToggleButton Name="ToggleButtonlogWarning"
                          Content="Warning"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Style="{DynamicResource DefaultToggleButton}"/>
            <Image Name="ImageWarn" 
                   Source="../Icons/Warn.png" 
                   Grid.Column="1" 
                   Stretch="Fill" 
                   Width="15" 
                   Height="15" 
                   Margin="-70,0,0,0"/>
            <ToggleButton Name="ToggleButtonLogError"
                          Content="Error"
                          Grid.Column="2"
                          Margin="0,0,10,0"
                          Style="{DynamicResource DefaultToggleButton}"/>
            <Image Name="ImageError" 
                   Source="../Icons/Error.png" 
                   Grid.Column="2" 
                   Stretch="Fill" 
                   Width="15" 
                   Height="15" 
                   Margin="-60,0,0,0"/>
            <ToggleButton Name="ToggleButtonLogFatal"
                          Content="Fatal"
                          Grid.Column="3"
                          Margin="0,0,10,0"
                          Style="{DynamicResource DefaultToggleButton}"/>
            <!-- <Image Name="Fatal" Source="../Icons/Fatal.png"/> -->
            <ToggleButton Name="ToggleButtonLogValidation"
                          Content="Validation"
                          Grid.Column="4"
                          Margin="0,0,10,0"
                          Style="{DynamicResource DefaultToggleButton}"/>
            <!-- <Image Name="Validation" Source="../Icons/Validation.png"/> -->
            <Button Name="ButtonFilter"
                    Content="Filter"
                    Grid.Column="6"
                    Style="{DynamicResource DefaultButton}"/>
            <ScrollViewer Name="ScrollViewerlog"
                          Grid.Column="0"
                          Grid.Row="2"
                          Grid.ColumnSpan="7">
                <ListView Name="ListViewLogEntry"
                          Background="#FF1F4E90"
                          ItemContainerStyle="{StaticResource AlternatingListViewItemRowStyle}" 
                          AlternationCount="2">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Timestamp" DisplayMemberBinding="{Binding Date}" Width="auto"/>
                            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="auto"/>
                            <GridViewColumn Header="Manager" DisplayMemberBinding="{Binding Manager}" Width="auto"/>
                            <GridViewColumn Header="Log message" DisplayMemberBinding="{Binding Content}" Width="auto"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
    </Border>
</Window>