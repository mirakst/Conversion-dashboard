<Window x:Class="DashboardFrontend.DeatachedWindows.HealthReportDetached"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d3="clr-namespace:InteractiveDataDisplay.Core;assembly=InteractiveDataDisplay.Core"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Health report monitoring"
        Height="450"
        Width="800">
    <Border Background="{DynamicResource BackgroundColor}">
        <Grid>
            <TabControl Background="{DynamicResource BackgroundColor}">
                <TabItem Name="cpuAndRamTab"
                         Header="CPU &amp; RAM"
                         Background="{DynamicResource BackgroundColor}"
                         Foreground="{DynamicResource ForegroundColor}">
                    <Border Margin="10">
                        <Grid>
                            <TextBlock Name="cpuCurrentLoad"
                                       Text="CPU load: 0%"
                                       Foreground="{DynamicResource ForegroundColor}"
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       Margin="0,0,5,5"/>
                            <TextBlock Name="ramCurrentUsage"
                                       Text="RAM usage: 0%"
                                       Foreground="{DynamicResource ForegroundColor}"
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       Grid.Column="1"
                                       Grid.Row="0"
                                       Margin="5,0,0,5"/>
                            <ComboBox Name="intervalComboBox"
                                      FontSize="20"
                                      Margin="0,0,0,5"
                                      VerticalAlignment="Center"
                                      Grid.Column="3"
                                      Grid.Row="0">
                                <ComboBoxItem Content="30 min"/>
                                <ComboBoxItem Content="1 Hour"/>
                                <ComboBoxItem Content="6 Hour"
                                              IsSelected="True"/>
                                <ComboBoxItem Content="12 Hour"/>
                                <ComboBoxItem Content="24 Hour"/>
                            </ComboBox>
                            <d3:Chart Name="healthReportChart"
                                      Background="{DynamicResource BackgroundColor}"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Margin="0,5,0,0"
                                      Grid.Column="0"
                                      Grid.ColumnSpan="4"
                                      Grid.Row="1">
                                <Grid Name="healthReportGrid"/>
                            </d3:Chart>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                        </Grid>
                    </Border>
                </TabItem>
                <TabItem Name="networkTab"
                         Header="Network"
                         Background="{DynamicResource BackgroundColor}"
                         Foreground="{DynamicResource ForegroundColor}">
                    
                </TabItem>
            </TabControl>
            <Grid.ColumnDefinitions>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

            </Grid.RowDefinitions>
        </Grid>
    </Border>
</Window>
