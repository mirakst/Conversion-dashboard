<Window x:Class="DashboardFrontend.DetachedWindows.HealthReportDetached"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:idd="clr-namespace:InteractiveDataDisplay.Core;assembly=InteractiveDataDisplay.Core"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Health report monitoring"
        Height="450"
        Width="800">
    <Border Background="{DynamicResource BackgroundColor}">
        <Grid>
            <TabControl Background="{DynamicResource BackgroundColor}"
                        BorderBrush="{DynamicResource BorderColor}">
                <TabItem Style="{DynamicResource TabItemStyleOverwrite}"
                         Name="tabItemCpuRam"
                         Header="CPU &amp; RAM">
                    <Border Margin="10">
                        <Grid>
                            <TextBlock Name="textBlockCurrentCpuLoad"
                                       Text="CPU load: 0%"
                                       Foreground="{DynamicResource ForegroundColor}"
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       Margin="0,0,40,5"/>
                            <TextBlock Name="textBlockCurrentRamUsage"
                                       Text="RAM usage: 0%"
                                       Foreground="{DynamicResource ForegroundColor}"
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       Grid.Column="1"
                                       Grid.Row="0"
                                       Margin="5,0,0,5"/>
                            <ComboBox Name="comboBoxChartInterval"
                                      FontSize="20"
                                      Margin="0,0,0,5"
                                      VerticalAlignment="Center"
                                      Grid.Column="3"
                                      Grid.Row="0">
                                <ComboBoxItem Content="30 min"/>
                                <ComboBoxItem Content="1 Hour"/>
                                <ComboBoxItem Content="6 Hours"
                                              IsSelected="True"/>
                                <ComboBoxItem Content="12 Hours"/>
                                <ComboBoxItem Content="24 Hours"/>
                            </ComboBox>
                            <idd:Chart Name="iddChartHealthReport"
                                      Background="{DynamicResource BackgroundColor}"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Margin="0,5,0,0"
                                      Grid.Column="0"
                                      Grid.ColumnSpan="4"
                                      Grid.Row="1">
                                <Grid Name="gridHealthReportChartGrid"/>
                            </idd:Chart>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                        </Grid>
                    </Border>
                </TabItem>
                <TabItem Style="{DynamicResource TabItemStyleOverwrite}" 
                         Name="tabItemNewtwork"
                         Header="Network">
                    <Border Margin="10">
                        <Grid>
                            <TextBlock Name="textBlockNetwork"
                                       FontSize="15"
                                       Grid.Column="0"
                                       Grid.Row="1"
                                       Background="{DynamicResource BackgroundColor}"
                                       Foreground="{DynamicResource ForegroundColor}">
                                Send:<LineBreak/>
                                Send delta:<LineBreak/>
                                Send speed:<LineBreak/>
                                <LineBreak/>
                                Recived:<LineBreak/>
                                Recived delta:<LineBreak/>
                                Recived speed:<LineBreak/>
                            </TextBlock>
                            <TextBlock Name="textBlockNetworkData"
                                       FontSize="15"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       Margin="0,0,10,0"
                                       Background="{DynamicResource BackgroundColor}"
                                       Foreground="{DynamicResource ForegroundColor}"
                                       TextAlignment="Right">
                                102 KB<LineBreak/>
                                932 KB<LineBreak/>
                                123 MB<LineBreak/>
                                <LineBreak/>
                                43 KB<LineBreak/>
                                12 KB<LineBreak/>
                                13 MB<LineBreak/>
                            </TextBlock>
                            <ComboBox Name="comboBoxNetworkChartInterval"
                                      FontSize="20"
                                      Margin="0,0,0,5"
                                      VerticalAlignment="Center"
                                      Grid.Column="4"
                                      Grid.Row="0">
                                <ComboBoxItem Content="30 min"/>
                                <ComboBoxItem Content="1 Hour"/>
                                <ComboBoxItem Content="6 Hour"
                                              IsSelected="True"/>
                                <ComboBoxItem Content="12 Hour"/>
                                <ComboBoxItem Content="24 Hour"/>
                            </ComboBox>
                            <idd:Chart Name="iddChartNetwork"
                                      Background="{DynamicResource BackgroundColor}"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Grid.Column="2"
                                      Grid.ColumnSpan="2"
                                      Grid.Row="1">
                                <Grid Name="gridNetworkChartGrid"/>
                            </idd:Chart>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
