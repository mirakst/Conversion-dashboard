<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashboardFrontend.DetachedWindows"
        xmlns:idd="clr-namespace:InteractiveDataDisplay.Core;assembly=InteractiveDataDisplay.Core"
        xmlns:adorners="http://gu.se/Adorners" x:Class="DashboardFrontend.DetachedWindows.ManagerListDetached"
        mc:Ignorable="d"
        Title="Manager statistics" 
        Height="720" 
        Width="1280">
    <Border Background="{StaticResource BackgroundColor}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>
            
            <Grid x:Name="gridManagerList"
                  Grid.Row="1"
                  Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="22*"/>
                </Grid.RowDefinitions>
                
                <TextBox x:Name="searchboxManager"
                     FontSize="15"
                     Margin="0,0,0,5" adorners:Watermark.Text="search"/>

                <DataGrid x:Name="datagridManagers"
                          Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding id}"
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Manager name" 
                                            Binding="{Binding name}"
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Score" 
                                            Binding="{Binding score}"
                                            IsReadOnly="True"/>
                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding status}"
                                            IsReadOnly="True"/>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Add" 
                                            Click="Button_Click">
                                        <Button.DataContext>
                                            <local:item/>
                                        </Button.DataContext>

                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>

            <Grid x:Name="tabcontrolGrid"
                  Grid.Column="3"
                  Grid.Row="1">
                <TabControl
                    Background="{StaticResource BackgroundColor}">
                    <TabItem
                        x:Name="TabInfo"
                        Header="Info">
                        <Grid x:Name="GridInfoTab">
                            <DataGrid x:Name="datagridDetailedManagers"
                                      Margin = "0, 3, 0, 0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID"
                                                        Binding="{Binding id}"
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Execution #"
                                                        Binding="{Binding execId}"
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Run #"
                                                        Binding="{Binding run}" 
                                                        IsReadOnly="True"/>
                                    <!-- run missing in manager class-->
                                    <DataGridTextColumn Header="Start time"
                                                        Binding="{Binding startTime}"
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Header="End time"
                                                        Binding="{Binding endTime}"
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Est. runtime"
                                                        Binding="{Binding Runtime}"
                                                        IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Rows read"
                                                        Binding="{Binding rowsRead}"
                                                        IsReadOnly="True"/>
                                    <!--missing-->
                                    <DataGridTextColumn Header="Rows written"
                                                        Binding="{Binding rowsWritten}"
                                                        IsReadOnly="True"/>
                                    <!-- missing -->
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <TabItem
                        x:Name="TabPerformance"
                        Header="Performance">
                        <Grid x:Name="GridPerformanceTab">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <idd:Chart x:Name="chartCPUload"
                                      Background="{DynamicResource BackgroundColor}"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Margin="0,5,0,0"
                                      Grid.Column="0"
                                      Grid.Row="0"
                                       PlotHeight="103">
                                <Grid x:Name="gridCPUload"/>
                            </idd:Chart>

                            <idd:Chart x:Name="chartRAMusage"
                                      Background="{DynamicResource BackgroundColor}"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Margin="0,5,0,0"
                                      Grid.Column="0"
                                      Grid.Row="1"
                                       PlotHeight="103">
                                <Grid x:Name="gridRAMusage"/>
                            </idd:Chart>

                            <idd:Chart x:Name="chartRowsRead"
                                      Background="{DynamicResource BackgroundColor}"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Margin="0,5,0,0"
                                      Grid.Column="0"
                                      Grid.Row="2"
                                      PlotHeight="103">
                                <Grid x:Name="gridRowsRead"/>
                            </idd:Chart>

                            <idd:Chart x:Name="chartRowsWritten"
                                      Background="{DynamicResource BackgroundColor}"
                                      Foreground="{DynamicResource ForegroundColor}"
                                      Margin="0,5,0,0"
                                      Grid.Column="0"
                                      Grid.Row="3"
                                       PlotHeight="103">
                                <Grid x:Name="gridRowsWritten"/>
                            </idd:Chart>

                            <DataGrid x:Name="datagridChartedManagers"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      Grid.RowSpan="4"
                                      Margin="10,7,0,0"
                                      HeadersVisibility="Row"
                                      Background="{StaticResource BackgroundColor}">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding id}"
                                                        IsReadOnly="True"/>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Remove"/>
                                                <!-- Maybe just an X for the button-->
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>

                            </DataGrid>

                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Border>
</Window>
