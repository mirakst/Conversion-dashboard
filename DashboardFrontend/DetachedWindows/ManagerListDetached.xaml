<Window
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashboardFrontend.DetachedWindows"
        xmlns:idd="clr-namespace:InteractiveDataDisplay.Core;assembly=InteractiveDataDisplay.Core"
        x:Class="DashboardFrontend.DetachedWindows.ManagerListDetached"
        mc:Ignorable="d"
        Title="Manager statistics" 
        Height="720" 
        Width="1280">
    <Border Background="{DynamicResource BackgroundColor}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"
                                  MaxWidth="640"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>
            
            <Grid x:Name="gridManagerList"
                  Grid.Row="1"
                  Grid.Column="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="35pt"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition Height="22*"/>
                </Grid.RowDefinitions>

                <TextBox Name="textboxSearchbar"
                         TextChanged="textboxSearchbar_TextChanged"
                         Margin="0,0,0,5"
                         Style="{DynamicResource SearchBox}">
                </TextBox>

                <DockPanel Name="dockpanelSearchbutton"
                           LastChildFill="False">
                    <Image Source="../Icons/magnifyingglassgray.png"
                               Margin="0,2,2,7"
                               DockPanel.Dock="Right"/>
                </DockPanel>

                <Button Name="buttonResetManagers"
                        Click="ResetManagers_Click"
                        Grid.Column="1"
                        Margin="5,0,0,5"
                        Content="Reset"
                        Style="{DynamicResource DefaultButton}">
                </Button>

                <DataGrid x:Name="datagridManagers"
                          Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Style="{DynamicResource DefaultDatagrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding Id}"
                                            Width="30pt"/>
                        <!--May be too low, its hardcoded to have some similarity between the selection and comparison datagrids-->
                        <DataGridTextColumn Header="Manager name" 
                                            Binding="{Binding Name}"
                                            Width="10*"/>
                        <DataGridTextColumn Header="Score" 
                                            Binding="{Binding Score}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding Status}"
                                            Width="*"/>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Name="buttonAddManager"
                                            Click="AddManager_Click"
                                            Content="g"
                                            FontFamily="wingdings 3"
                                            Tag="{Binding}"
                                            Style="{DynamicResource DefaultButton}">
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid x:Name="tabcontrolGrid"
                  Grid.Column="3"
                  Grid.Row="1"
                  Margin="0,-1,0,0">
                <TabControl Name="tabcontrolStatistics"
                            Background="{DynamicResource BackgroundColor}"
                            BorderBrush="Transparent">
                    <TabItem x:Name="TabInfo"
                             Header="Info"
                             Style="{DynamicResource TabItemStyleOverwrite}"
                             Height="27">
                        <Grid x:Name="GridInfoTab"
                              Margin="-4,-6,-3,-3">
                            <DataGrid x:Name="datagridManagerDetails"
                                      Margin = "0, 3, 0, 0"
                                      Style="{DynamicResource DefaultDatagrid}">
                                <DataGrid.Columns>
                                    <!--All of these properties are necessary to move a manager from on datagrid to the other-->
                                    <DataGridTextColumn Header="ID"
                                                        Binding="{Binding Id}"
                                                        Width="30pt"/>
                                    <DataGridTextColumn Header="Execution #"
                                                        Binding="{Binding ExecutionId}"
                                                        Width="2*"/>
                                    <!-- run # missing in manager class-->
                                    <DataGridTextColumn Header="Start time"
                                                        Binding="{Binding StartTime, StringFormat=\{0:dd/MM HH.mm.ss\}}"
                                                        Width="2*"/>
                                    <DataGridTextColumn Header="End time"
                                                        Binding="{Binding EndTime, StringFormat=\{0:dd/MM HH.mm.ss\}}"
                                                        Width="2*"/>
                                    <DataGridTextColumn Header="Est. runtime"
                                                        Binding="{Binding Runtime}"
                                                        Width="2*"/>
                                    <DataGridTextColumn Header="Rows read"
                                                        Binding="{Binding RowsRead}"
                                                        Width="2*"/>
                                    <DataGridTextColumn Header="Rows written"
                                                        Binding="{Binding RowsWritten}"
                                                        Width="2*"/>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Name="buttonRemoveManager"
                                                        Click="RemoveManager_Click"
                                                        Content='f'
                                                        FontFamily="wingdings 3"
                                                        Tag="{Binding}"
                                                        Style="{DynamicResource DefaultButton}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <TabItem
                        x:Name="TabPerformance"
                        Header="Performance"
                        Style="{DynamicResource TabItemStyleOverwrite}"
                        Height="27">
                        <Grid x:Name="GridPerformanceTab"
                              Margin="-4,-6,-3,-3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            
                            
                            
                            <idd:Chart Name="chartCPUload"
                                       LeftTitle="CPU Usage"
                                       BottomTitle="Time"
                                       LegendVisibility="Visible"
                                       Background="{DynamicResource BackgroundColor}"
                                       Foreground="{DynamicResource ForegroundColor}"
                                       Margin="0,5,0,0"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       PlotHeight="103">
                                <Grid x:Name="gridChartCPUload"/>
                            </idd:Chart>

                            <idd:Chart Name="chartRAMusage"
                                       LeftTitle="RAM Usage"
                                       BottomTitle="Time"
                                       LegendVisibility="Hidden"
                                       Background="{DynamicResource BackgroundColor}"
                                       Foreground="{DynamicResource ForegroundColor}"
                                       Margin="0,5,0,0"
                                       Grid.Column="0"
                                       Grid.Row="1"
                                       PlotHeight="103">
                                <Grid x:Name="gridChartRAMusage"/>
                            </idd:Chart>

                            <idd:Chart Name="chartRowsRead"
                                       LeftTitle="Rows read"
                                       BottomTitle="Time"
                                       LegendVisibility="Hidden"
                                       Background="{DynamicResource BackgroundColor}"
                                       Foreground="{DynamicResource ForegroundColor}"
                                       Margin="0,5,0,0"
                                       Grid.Column="0"
                                       Grid.Row="2"
                                       PlotHeight="103">
                                <Grid x:Name="gridChartRowsRead"/>
                            </idd:Chart>

                            <idd:Chart Name="chartRowsWritten"
                                       LeftTitle="Rows written"
                                       BottomTitle="Time"
                                       LegendVisibility="Hidden"
                                       Background="{DynamicResource BackgroundColor}"
                                       Foreground="{DynamicResource ForegroundColor}"
                                       Margin="0,5,0,0"
                                       Grid.Column="0"
                                       Grid.Row="3"
                                       PlotHeight="103">
                                <Grid x:Name="gridChartRowsWritten"/>
                            </idd:Chart>

                            <DataGrid Name="datagridManagerCharts"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      Grid.RowSpan="4"
                                      Margin="15,5,0,10"
                                      BorderBrush="Transparent"
                                      Style="{DynamicResource DefaultDatagrid}"
                                      Background="{DynamicResource BackgroundColor}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding Id}"
                                                        Header="ID"
                                                        Width="30pt"/>
                                    <DataGridTextColumn Binding="{Binding ExecutionId}"
                                                        Header="Exec ID"
                                                        Width="*"/>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Name="buttonRemoveManager"
                                                        Click="RemoveManager_Click"
                                                        Content='f'
                                                        FontFamily="wingdings 3"
                                                        Tag="{Binding}"
                                                        Style="{DynamicResource DefaultButton}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Border>
</Window>
